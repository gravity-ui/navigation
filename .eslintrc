{
    "extends": [
        "@gravity-ui/eslint-config",
        "@gravity-ui/eslint-config/prettier"
    ],
    "root": true,
    "env": {
        "node": true,
        "jest": true
    },
    "overrides": [
        {
            "files": [
                "**/__tests__/**/*.[jt]s?(x)",
                "**/?(*.)+(spec|test).[jt]s?(x)"
            ],
            "extends": [
                "plugin:testing-library/react"
            ]
        },
    ],
    "plugins": [
        "react-hooks"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
        "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
    }
}